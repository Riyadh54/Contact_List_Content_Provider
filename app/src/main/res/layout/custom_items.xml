<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="7dp"
    app:cardCornerRadius="25dp"
    android:layout_margin="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/custom_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/custom_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/custom_item_tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/custom_item_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/custom_item_tv_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Other Details"
                android:gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/custom_item_img"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>